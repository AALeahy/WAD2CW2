<html>
    <head> 
        {{>header}}
    </head>
    <body>
    {{> nav}}
        <div class="container">
            <h2>Add new food item</h2>
            <form method="post" role="form" action="/new">
                <div class="form-group">
                    <label for="name">Item name</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Enter Item Name" required>
                </div>
                <div class="form-group">
                    <label for="expiry">Expiry Date</label>
                    <input type="date" class="form-control" id="expiry" name="expiry" placeholder="DD/MM/YY" required>
                </div>
                <div class="form-group">
                    <label for="quantity">Number of Items</label>
                    <input type="number" class="form-control" id="quantity" name="quantity" placeholder="0">
                </div>
                <div class="form-group">
                    <label for="owner">Owner</label>
                    <input type="text" class="form-control" id="owner" name="owner" placeholder="Your name or institution"> 
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input type="text" class="form-control" id="description" name="description" placeholder="Tell us a little about the item"> 
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary">
                </div>
            </form>
        </div>
    </body>
</html>